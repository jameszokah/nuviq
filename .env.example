# Application Settings
HOST=0.0.0.0
PORT=4123

# TTS Model Settings
EXAGGERATION=0.5
CFG_WEIGHT=0.5
TEMPERATURE=0.8
MAX_CHUNK_LENGTH=280
MAX_TOTAL_LENGTH=3000
VOICE_SAMPLE_PATH=./voice-sample.mp3
